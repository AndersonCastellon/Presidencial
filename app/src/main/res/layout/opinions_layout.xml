<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/upload_image_background"
    android:padding="@dimen/nav_header_vertical_spacing">

    <LinearLayout
        android:id="@+id/headboard_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/red_error" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/nav_header_vertical_spacing">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:textSize="@dimen/textSizeButton"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/date_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/bottom_text_size"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/nav_header_vertical_spacing">

            <ImageView
                android:id="@+id/flag_political"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:src="@color/red_error" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/opinion_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_menu_points"
                android:backgroundTint="@color/accent"
                android:tint="@color/accent" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headboard_opinion"
        android:orientation="vertical"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <TextView
            android:id="@+id/opinion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text" />

        <ImageView
            android:id="@+id/image_opinion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:scaleType="centerCrop"
            android:src="@color/red_error" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_opinion"
        android:orientation="horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <Button
            android:id="@+id/btn_like_opinion"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_like"
            android:textColor="@color/secondary_text" />

        <Button
            android:id="@+id/btn_comment_opinion"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_post_comments"
            android:textColor="@color/secondary_text" />

        <Button
            android:id="@+id/btn_share_opinion"
            style="?android:attr/buttonBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_share_app"
            android:textColor="@color/secondary_text" />

    </LinearLayout>

</RelativeLayout>